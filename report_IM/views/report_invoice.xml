<?xml version="1.0" encoding="utf-8"?>	
<odoo>
	<data>
		<template id="custom_header" inherit_id="l10n_cl.custom_header">
			<xpath expr="//div/div/div[@name='left-upper-side']" position="replace">
				<div name="left-upper-side" class="col-8 text-center">
					<img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                         style="max-height: 50px;" alt="Logo"/>
                    <br/>
                    <strong>
                        <span t-field="o.company_id.partner_id.name"/>
                    </strong>
                    <br/>
                    <span name="company_activity" class="font-italic" t-field="o.company_id.report_header"/>
                    <span t-field="o.company_id.l10n_cl_activity_description"/>
                    <br/>
                    <span t-field="o.company_id.street"/> - <span t-field="o.company_id.city"/> - <span t-field="o.company_id.state_id.name"/> 
                    <br/>
                    <span>TELÉFONO: </span> <span t-field="o.company_id.phone"/>
                    <br/>
                    <span>E-MAIL: </span> <span t-field="o.company_id.email"/>
                    <br/>
				</div>
			</xpath>
			<xpath expr="//div/div/div[@name='right-upper-side']/div/div/div" position="attributes">
				<attribute name="class">color_borde</attribute>
			</xpath>
		</template>
		<template id="report_invoice_informations" inherit_id="l10n_cl.informations">
			<xpath expr="//div[@id='informations']" position="replace">
				<div id="informations">
					<table name="informations_invoice" class="table informations_invoice letter">
						<tr>
							<td class="td_color espacio">
								<strong>Señor(es): </strong>
							</td>
							<td class="espacio">
								<span t-field="o.partner_id.name"/>
							</td>
							<td class="td_color espacio">
								<strong>RUT: </strong>
							</td>
							<td class="td_new espacio">
								<span t-field="o.partner_id.vat"/>
							</td>
						</tr>
						<tr>
							<td class="td_color espacio">
								<strong>Giro: </strong>
							</td>
							<td class="espacio">
								<span t-field="o.partner_id.l10n_cl_activity_description"/>
							</td>
							<td class="td_color espacio">
								<strong>Fecha Emisión</strong>
							</td>
							<td class="td_new espacio">
								<span t-field="o.invoice_date"/>
							</td>
						</tr>
						<tr>
							<td class="td_color espacio">
								<strong>Dirección: </strong>
							</td>
							<td class="espacio">
								<span t-field="o.partner_id.street"/>
							</td>
							<td class="td_color espacio">
								<strong>Comuna: </strong>
							</td>
							<td class="td_new espacio">
								<span t-field="o.partner_id.city"/>
							</td>
						</tr>
						<tr>
							<td class="td_color espacio">
								<strong>Contacto: </strong>
							</td>
							<td class="espacio">
								<t t-foreach="o.partner_id.child_ids" t-as="contac">
									<span t-field="contac.name"/>,  
								</t>
							</td>
							<td class="td_color espacio">
								<strong>Vendedor: </strong>
							</td>
							<td class="td_new espacio">
								<span t-field="o.partner_id.user_id.name"/>
							</td>
						</tr>
						<tr>
							<td class="td_color espacio">
								<strong>Tasa UF: </strong>
							</td>
							<td class="td_new espacio" colspan="4">
								<span t-field="o.uf_rate"/>
							</td>
						</tr>
					</table>
					<table name="date_pay" class="table date_pay letter">
						<tr>
							<th class="text-center th" colspan="4">
								<strong>Datos del pago: </strong>
							</th>
						</tr>
						<tr>
							<td class="td_color">
								<strong>Forma: </strong>
							</td>
							<td class="td">
								<span t-field="o.invoice_payment_term_id.name"/>
							</td>
						</tr>
						<tr>
							<td class="td_color">
								<strong>Terminos: </strong>
							</td>
							<td class="td">
								<span t-field="o.invoice_date_due"/>
							</td>
						</tr>
					</table>
				</div>
			</xpath>
		</template>

		<template id="report_invoice_document" inherit_id="account.report_invoice_document" primary="True">
			<t t-set="o" position="after">
            	<t t-set="custom_header" t-value="'report_IM.custom_header'"/>
        	</t>

        	<t t-set="address" position="replace"/>

        	<xpath expr="//h2" position="replace"/>
        	
        	<div id="informations" position="replace">
        		<t t-call="report_IM.report_invoice_informations"/>
        	</div>
        	<xpath expr="//div/table[@name='invoice_line_table']" position="replace">
        		<table name="invoice_line_table" class="table invoice_line_table letter">
					<tr>
						<th class="text-center th" colspan="6">
							<strong>Detalles</strong>
						</th>
					</tr>
					<tr>
						<th name="th_description" class="text-left th"><span>Descripción</span></th>
						<th name="th_quantity" class="text-right th"><span>Cantidad</span></th>
						<th name="th_unid" class="text-center th"><span>Unid</span></th>
						<th name="th_priceunit" t-attf-class="text-right th {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio Unitario</span></th>
						<th name="th_total" class="text-right th"><span>Total</span></th>
					</tr>
					
					<t t-foreach="o.invoice_line_ids" t-as="line">
						<tr>
							<td name="account_invoice_line_name" class="text-left td_lines"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
							<td name="td_quantity" class="text-right td_lines"><span t-field="line.quantity"/></td>
							<td name="td_unid" class="text-center td_lines"><span t-field="line.product_uom_id"/></td>
							<td name="td_priceunit" class="text-right td_lines"><span t-field="line.price_unit"/></td>
							<td name="td_total" class="text-right td_lines"><span t-field="line.price_subtotal"/></td>	
						</tr>
					</t>
				</table>
        	</xpath>
        	<xpath expr="//div/div[hasclass('clearfix')]" position="replace">
        		<div id="total" class="row mgen">
        			<div class="column">
        				<t t-if="o.l10n_cl_reference_ids">
	        				<table name="table_references" class="table letter table_duo">
	        					<tr>
	        						<th class="text-center th_duo th_encabezado" colspan="5">
	        							<strong>Referencias</strong>
	        						</th>
	        					</tr>
	        					<tr>
	        						<th name="th_reference_origin" class="text-center th_duo th_encabezado"><span>Ref Orígenes</span></th>
	        						<th name="th_reference_doc_type" class="text-left th_duo th_encabezado"><span>Tipo de Doc. Ref </span></th>
	        						<th name="th_reference_code" class="text-center th_duo th_encabezado"><span>Cód. Doc</span></th>
	        						<th name="th_reference_reason" class="text-left th_duo th_encabezado"><span>Razón</span></th>
	        						<th name="th_reference_date" class="text-left th_duo th_encabezado"><span>Fecha</span></th>
	        					</tr>
	        					<t t-foreach="o.l10n_cl_reference_ids" t-as="refs">
	        						<tr>
	        							<td name="td_reference_origin" class="td_duo"><span t-field="refs.origin_doc_number"/></td>
	        							<td name="td_reference_doc_type" class="td_duo"><span t-field="refs.l10n_cl_reference_doc_type_selection"/></td>
	        							<td name="td_reference_code" class="td_duo"><span t-field="refs.reference_doc_code"/></td>
	        							<td name="td_reference_reason" class="td_duo"><span t-field="refs.reason"/></td>
	        							<td name="td_reference_date" class="td_duo"><span t-field="refs.date"/></td>
	        						</tr>
	        					</t>
	        				</table>
	        			</t>
        			</div>
        			<div class="column">
        				<table name="table_totales" class="table letter table_duo">
        					<tr>
								<th class="text-center th_duo th" colspan="2">
									<strong>Totales</strong>
								</th>
							</tr>
        					<tr>
        						<td class="td_totales td_duo"><strong>Subtotal:</strong></td>
        						<td class="td_duo text-right td"><span t-field="o.amount_untaxed"/></td>
        					</tr>
        					<t t-foreach="o.amount_by_group" t-as="amount_by_group">
        						<tr>
        							<t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
        								<td class="td_totales">
        									<span class="text-nowrap" t-esc="amount_by_group[0]"/>
        								</td>
        								<td class="text-right o_price_total td">
        									<span class="text-nowrap" t-esc="amount_by_group[3]" />
        								</td>
        							</t>
        							<t t-else="">
        								<td class="td_totales">
        									<span t-esc="amount_by_group[0]"/>
        									<span class="text-nowrap"> on
        										<t t-esc="amount_by_group[4]"/>
        									</span>
        								</td>
        								<td class="text-right o_price_total td">
        									<span class="text-nowrap" t-esc="amount_by_group[3]"/>
        								</td>
        							</t>
        						</tr>
        					</t>
        					<tr>
        						<td class="td_totales td_duo"><strong>Total:</strong></td>
        						<td class="text-right td td_duo"><span class="text-nowrap" t-field="o.amount_total"/></td>
        					</tr>
        				</table>
        			</div>
        		</div>
