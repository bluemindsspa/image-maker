        <record id="group_purchase_boss" model="res.groups">
            <field name="name">Jefe de Compras</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        </record>

        <record id="group_purchase_director" model="res.groups">
            <field name="name">Gerente</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids" eval="[(4, ref('group_purchase_boss'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
