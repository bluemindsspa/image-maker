<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="im_view_order_form">
            <field name="name">im.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[10]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[6]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[9]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[5]" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('validate', '=', False)]}
                    </attribute>
                </xpath>
                <xpath expr="//header/button[5]" position="attributes">
                    <attribute name="states"></attribute>
                </xpath>
                <xpath expr="//header/button[7]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[8]" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('validate', '=', False)]}
                    </attribute>
                </xpath>
                <field name="payment_term_id" position="after">
                    <field name="estado"/>
                    <field name="solid" groups="custom_image_maker.group_im_validation"/>
                    <field name="srv_start_date"/>
<!--                    <field name="srv_end_date"/>-->
<!--                    <field name="percentage" widget="percentage"/>-->
                    <field name="validate_readonly" invisible="1"/>
                    <field name="validate" attrs="{'readonly': [('validate_readonly', '=', True)]}"/>
                    <field name="lock" invisible="1"/>
                    <field name="discount_validate" groups="custom_image_maker.group_im_validation" attrs="{'invisible': [('discount_validate', '=', False)]}"/>
                    <field name="higher_discount" invisible="1"/>
                    <label for="periodo"/>
                    <div class="o_row" name="periodo">
                        <field name="periodo"/>
                        <span>Meses</span>
                    </div>
                </field>
                <xpath expr="//group[@name='partner_details']" position="inside">
                    <field name="imteam_id"/>
                    <field name="product_id" required="0"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="is_a_project" invisible="1"/>
                    <field name="sale_order_template_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': [('is_a_project', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="im_view_quotation_tree" model="ir.ui.view">
            <field name="name">im.sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="activity_ids" position="after">
                    <field name="imteam_id"/>
                    <field name="solid" groups="custom_image_maker.group_im_validation"/>
                    <field name="srv_start_date"/>
<!--                    <field name="srv_end_date"/>-->
                    <field name="discount_validate" groups="custom_image_maker.group_im_validation"/>
                    <field name="lock" invisible="1"/>
                    <field name="validate_readonly" invisible="1"/>
                    <field name="validate" attrs="{'readonly': [('validate_readonly', '=', True)]}"/>
                    <field name="estado"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
