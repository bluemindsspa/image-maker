<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="level_disc_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">level.disc.res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pricing_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="discount_leves_management" title="Levels approve discounts">
                        <div class="o_setting_left_pane">
                            <field name="discount_levels"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="discount_levels"/>
                            <div class="text-muted" id="levels_disc">
                                Administrar niveles de aprobacion de descuentos
                            </div>
                            <div class="content-group" attrs="{'invisible': [('discount_levels' ,'=', False)]}">
                                <div class="mt16">
                                    <label for="discount_level" string="Importe"/>
                                    <field name="discount_level" class="o_light_label"/> <span class="o_form_label"> %</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>


    </data>
</odoo>