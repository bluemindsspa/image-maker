<odoo>
  <data>
   <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="model">stock.production.lot</field>
        <field name="arch" type="xml">     
            <xpath expr="//field[@name='ref']" position="after">
                <field name="employee_id" string="Empleado"/>   
            </xpath>
            <xpath expr="//group[2]" position="before">
                <group>
                    <field name="license_ids" string="Licencias" widget="many2many_tags"/>
                    <field name="imei_id" string="Imei"/>
                    <field name="phone" string="N°- de Teléfono"/>
                    <field name="description" string="Observaciones"/>
                </group>
            </xpath>
        </field>
    </record>
  </data>
</odoo>