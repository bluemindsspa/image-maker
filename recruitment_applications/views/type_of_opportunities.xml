<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_type_of_oportunities_form" model="ir.ui.view">
        	<field name="name">type.of.oportunities.form</field>
        	<field name="model">type_of_oportunities</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_type_of_oportunities_tree" model="ir.ui.view">
        	<field name="name">type.of.oportunities.tree</field>
        	<field name="model">type_of_oportunities</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_type_of_oportunities" model="ir.actions.act_window">
        	<field name="name">Oportunities</field>
        	<field name="res_model">type_of_oportunities</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_type_of_oportunities" 
    		name="Type of Oportunities"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_type_of_oportunities"/>
	</data>
</odoo>