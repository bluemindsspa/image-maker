<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_soft_skills_form" model="ir.ui.view">
        	<field name="name">soft.skills.form</field>
        	<field name="model">soft_skills</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_soft_skills_tree" model="ir.ui.view">
        	<field name="name">soft.skills.tree</field>
        	<field name="model">soft_skills</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_soft_skills" model="ir.actions.act_window">
        	<field name="name">Soft skills</field>
        	<field name="res_model">soft_skills</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_soft_skills" 
    		name="Soft skills"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_soft_skills"/>
	</data>
</odoo>