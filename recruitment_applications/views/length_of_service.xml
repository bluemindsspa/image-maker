<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_length_of_service_form" model="ir.ui.view">
        	<field name="name">length.of.service.form</field>
        	<field name="model">length_of_service</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_length_of_service_tree" model="ir.ui.view">
        	<field name="name">length.of.service.tree</field>
        	<field name="model">length_of_service</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_length_of_service" model="ir.actions.act_window">
        	<field name="name">Length of service</field>
        	<field name="res_model">length_of_service</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_length_of_service" 
    		name="Length of service"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_length_of_service"/>
	</data>
</odoo>