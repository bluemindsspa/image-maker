<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_income_ceiling_form" model="ir.ui.view">
        	<field name="name">income.ceiling.form</field>
        	<field name="model">income_ceiling</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_income_ceiling_tree" model="ir.ui.view">
        	<field name="name">income.ceiling.tree</field>
        	<field name="model">income_ceiling</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_income_ceiling" model="ir.actions.act_window">
        	<field name="name">Income ceiling</field>
        	<field name="res_model">income_ceiling</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_income_ceiling" 
    		name="Income ceiling"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_income_ceiling"/>
	</data>
</odoo>