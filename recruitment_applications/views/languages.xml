<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_languages_form" model="ir.ui.view">
        	<field name="name">languages.form</field>
        	<field name="model">languages</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_languages_tree" model="ir.ui.view">
        	<field name="name">languages.tree</field>
        	<field name="model">languages</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_languages" model="ir.actions.act_window">
        	<field name="name">Languages</field>
        	<field name="res_model">languages</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_languages" 
    		name="Languages"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_languages"/>
	</data>
</odoo>