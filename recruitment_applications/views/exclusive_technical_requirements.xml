<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_exclusive_technical_requirements_form" model="ir.ui.view">
        	<field name="name">exclusive.technical.requirements.form</field>
        	<field name="model">exclusive_technical_requirements</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_exclusive_technical_requirements_tree" model="ir.ui.view">
        	<field name="name">exclusive.technical.requirements.tree</field>
        	<field name="model">exclusive_technical_requirements</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_exclusive_technical_requirements" model="ir.actions.act_window">
        	<field name="name">Exclusive technical requirements</field>
        	<field name="res_model">exclusive_technical_requirements</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_exclusive_technical_requirements" 
    		name="Technical requirements"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_exclusive_technical_requirements"/>
	</data>
</odoo>
