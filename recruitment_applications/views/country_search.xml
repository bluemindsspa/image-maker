<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_country_search_form" model="ir.ui.view">
        	<field name="name">country.search.form</field>
        	<field name="model">country_search</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_country_search_tree" model="ir.ui.view">
        	<field name="name">country.search.tree</field>
        	<field name="model">country_search</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_country_search" model="ir.actions.act_window">
        	<field name="name">Country search</field>
        	<field name="res_model">country_search</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_country_search" 
    		name="Country search"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_country_search"/>
	</data>
</odoo>