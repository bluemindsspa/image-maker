<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_account_item_form" model="ir.ui.view">
        	<field name="name">account.item.form</field>
        	<field name="model">account_item</field>
        	<field name="arch" type="xml">
            	<form>
                    <sheet>
                	   <group colspan="2" col="4">
                    	   <field name="name"/>
                	   </group>
                    </sheet>
            	</form>
        	</field>
    	</record>

    	<record id="view_account_item_tree" model="ir.ui.view">
        	<field name="name">account.item.tree</field>
        	<field name="model">account_item</field>
        	<field name="arch" type="xml">
            	<tree editable="top">
                	<field name="name"/>
            	</tree>
        	</field>
    	</record>

    	<record id="action_account_item" model="ir.actions.act_window">
        	<field name="name">Account Item</field>
        	<field name="res_model">account_item</field>
        	<field name="view_mode">tree,form</field>
    	</record>

    	<menuitem 
    		id="menu_account_item" 
    		name="Account Item"
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_account_item"/>
	</data>
</odoo>